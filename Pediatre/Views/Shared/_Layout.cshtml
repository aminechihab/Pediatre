<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pedia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        
            <div class="navbar">
                <a href='@Url.Action("Login", "User")'>
                    <img src='@Url.Content("~/Content/imgs/ped.png")' style="width:30px;" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
               <ul class="navbar-nav mr-auto ">
                   <li class="nav-item">
                       <a class="nav-link" href='@Url.Action("Register","User")'>Inscription</a>
                   </li>
                    
               
                    
                </ul>
            </div>
        </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pedia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
