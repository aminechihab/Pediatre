@{
                ViewBag.Title = "Register";
}

@Styles.Render("~/Content/Login.css")

<div class="modal-body row">
    <div class="form-group col-md-6">
        <img src="@Url.Content("~/Content/imgs/pediatre.png")" style="width:80%; margin-top:60px" class="img-responsive" />
    </div>

    <div class="col-md-6">
        <center>
            <div class="form-group">
                @Html.Label("Veuillez remplir ce formulaire")
                </div>
                <div class="form-group">

                    @Html.TextBox("nom", "", new { @class = "form-control", @placeholder = "Nom.." })

                </div>

                <div class="form-group">
                    @Html.TextBox("prenom", "", new { @class = "form-control", @placeholder = "Prénom.." })
                </div>
                <div class="form-group">
                    @Html.TextBox("adresseCab", "", new { @class = "form-control", @placeholder = "Adresse de cabinet.." })
                </div>
                <div class="form-group">
                    @Html.TextBox("adressePerso", "", new { @class = "form-control", @placeholder = "Adresse personnelle.." })
                </div>
                <div class="form-group">
                    @Html.TextBox("telFixe", "", new { @class = "form-control", @placeholder = "Téléphone fixe.." })
                </div>
                <div class="form-group">
                    @Html.TextBox("telMobile", "", new { @class = "form-control", @placeholder = "Téléphone mobile.." })
                </div>
                <div class="form-group">
                    @Html.TextBox("email", "", new { @class = "form-control", @placeholder = "Email.." })
                </div>
                <div class="form-group">
                    @Html.TextBox("username", "", new { @class = "form-control", @placeholder = "Username.." })
                </div>
                <div class="form-group">
                    @Html.Password("password", "", new { @class = "form-control", @placeholder = "Mot de passe.." })
                </div>
                <div class="form-group">
                    @Html.Password("confirmPassword", "", new { @class = "form-control", @placeholder = "Confirmation du mot de passe.." })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="S'inscrire" />
                </div>
        </center>
    </div>
</div>


